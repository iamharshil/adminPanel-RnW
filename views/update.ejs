      <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">UPDATE INFORMATION</h4>
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Library
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
          <!-- ============================================================== -->
          <!-- Start Page Content -->
          <!-- ============================================================== -->
          <div class="row">
            <div class="col-md-6">
              <div class="card mb-0">
                <form action="/updateRecord" class="form-horizontal" method="post" enctype="multipart/form-data">
                  <div class="card-body">
                    <h4 class="card-title">Personal Information</h4>

  <!-- ---------------------------------NAME------------------------------- -->

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label">First Name</label>
                      <div class="col-sm-9">
                        <input type="hidden" value="<%= UpdateRec.id %>" id="id" name="p_id"/>
                        <input type="text" class="form-control" value="<%= UpdateRec.name %>" id="name" name="name" placeholder="First Name Here" />
                      </div>
                    </div>

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label">Enter Email</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" id="email" name="email" value="<%= UpdateRec.email %>" placeholder="Enter Email Here" />
                      </div>
                    </div>
<!-- --------------------------------------PASSWORD------------------------------------------- -->

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label">Enter Password</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" id="email" name="password" value="<%= UpdateRec.password %>" placeholder="Enter Email Here" />
                      </div>
                    </div>

<!-- ---------------------------------GENDER------------------------------- -->

                    <div class="form-group row">
                      <label class="col-md-3" style="text-align: right;">Gender</label>
                      <div class="col-md-9">
                        <div class="form-check">
                          <input type="radio" class="form-check-input" id="customControlValidation1" name="gender" value="male" <% if(UpdateRec.gender=='male'){ %> <%= 'checked' %> <% } %>/>
                          <label class="form-check-label mb-0" for="customControlValidation1">Male</label>
                        </div>
                        <div class="form-check">
                          <input type="radio" class="form-check-input" id="customControlValidation1" name="gender" value="female" <% if(UpdateRec.gender=='female'){ %> <%= 'checked' %> <% } %>/>
                          <label class="form-check-label mb-0" for="customControlValidation1">Female</label>
                        </div>
                        </div>
                      </div>
                    </div>

  <!-- ---------------------------------HOBBY------------------------------- -->

                    <div class="form-group row">
                      <label class="col-md-3" style="text-align: right;">Hobby</label>
                      <div class="col-md-9">
                        <div class="form-check mr-sm-2">
                          <input type="checkbox" value="cricket" name="hobby[]" <% if(UpdateRec.hobby.includes('cricket')){ %> <%= 'checked' %> <% } %>  class="form-check-input" id="customControlAutosizing1"/>
                          <label class="form-check-label mb-0" for="customControlAutosizing1" >Cricket</label>
                        </div>
                        <div class="form-check mr-sm-2">
                          <input type="checkbox" value="reading" name="hobby[]" <% if(UpdateRec.hobby.includes('reading')){ %> <%= 'checked' %> <% } %>  class="form-check-input" id="customControlAutosizing1"/>
                          <label class="form-check-label mb-0" for="customControlAutosizing1" >Reading</label>
                        </div>
                        <div class="form-check mr-sm-2">
                          <input type="checkbox" value="music" name="hobby[]" <% if(UpdateRec.hobby.includes('music')){ %> <%= 'checked' %> <% } %>  class="form-check-input" id="customControlAutosizing1"/>
                          <label class="form-check-label mb-0" for="customControlAutosizing1" >Music</label>
                        </div>
                      </div>
                    </div>

<!-- ---------------------------------SELECT------------------------------- -->

                    <% city =['Surat','Navasari','Rajkot'] %>
                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label">Select City</label>
                      <div class="col-sm-9">
                        <select name="city" class="form-control">
                          <option value="" selected>--select city--</option>
                          <% for(var i=0; i<city.length; i++){ %>
                            <option value="<%= city[i] %>" <% if(UpdateRec.city==city[i]){ %><%= 'selected' %> <% } %>><%= city[i] %></option>
                          <% } %>
                        </select>
                      </div>
                    </div>
  <!-- ---------------------------------FILE UPLOAD------------------------------- -->                    

                    <div class="form-group row">
                      <label for="fname" class="col-sm-3 text-end control-label col-form-label">Upload image</label>
                      <div class="col-sm-9">
                        <input type="file" class="form-control" name="avatar"/>
                        <img src="<%= UpdateRec.avatar %>" height="70" style="margin-top: 5px;" >
                      </div>
                    </div>

  <!-- ---------------------------------MESSAGE------------------------------- -->

                    <div class="form-group row">
                      <label
                        for="cono1"
                        class="col-sm-3 text-end control-label col-form-label"
                        >Message</label
                      >
                      <div class="col-sm-9">
                        <textarea class="form-control" name="description"><%= UpdateRec.description %></textarea>
                      </div>
                    </div>

  <!-- ---------------------------------SUBMIT------------------------------- -->

                  </div>
                  <div class="border-top">
                    <div class="card-body bg-white">
                      <input type="submit" value="UPDATE" name="submit" class="btn btn-primary">
                    </div>
                  </div>
                </form>
              </div>
            </div>
        
